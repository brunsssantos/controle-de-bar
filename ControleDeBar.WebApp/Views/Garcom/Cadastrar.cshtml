@model CadastrarGarcomViewModel;

@{
    Layout = "_Layout";

    ViewData["Title"] = "Cadastro de Garçons";
}

<main class="container my-4">
    <div class="col-12 col-lg-8">
        <form class="col-6" asp-action="Cadastrar" method="post">

            <div class="mb-3">
                <label asp-for="Nome" class="form-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Cpf" class="form-label">CPF:</label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>

            </div>

            <div class="text-end">
                <a asp-action="Index" class="btn btn-outline-primary">Cancelar</a>
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>

        </form>

    </div>
</main>