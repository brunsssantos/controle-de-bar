@{
    ViewData["Title"] = "Visualização de Contas";
}

@model VisualizarContasViewModel

<div class="container">
    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" asp-action="Abrir">+ Abrir Conta</a>
    </div>
</div>


<div class="row g-3">

    @foreach (DetalhesContaViewModel c in Model.Registros)
    {
        <div class="col-3">

            <div class="card h-100 bg-dark border-secondary">
                <div class="card-body">
                    <h5 class="card-title">@c.Titular</h5>
                    <p class="card-text mb-1"><strong>Mesa:</strong> @c.Mesa</p>
                    <p class="card-text mb-1"><strong>Garçom:</strong> @c.Garcom</p>

                    @if (c.EstaAberta)
                    {
                        <span class="d-flex gap-1 justify-content-end mt-4">
                            <a title="Gerenciar pedidos" asp-action="GerenciarPedidos" asp-route-id="@c.Id" class="btn btn-primary">
                                <i class="bi bi-cart"></i>
                            </a>
                            <a title="Fechar conta" asp-action="Fechar" asp-route-id="@c.Id" class="btn btn-success">
                                <i class="bi bi-cash-coin"></i>
                            </a>
                        </span>
                    }
                </div>

            </div>
        </div>
    }
</div>