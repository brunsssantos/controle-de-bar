@model GerenciarPedidosViewModel

@{
    ViewData["Title"] = "Gerenciar Pedidos da Conta";
}

<div class="row justify-content-center my-5">
    <div class="col-12 col-lg-8">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4 p-md-5">

                <h4 class="mb-1">Gerenciamento de Pedidos na Conta</h4>
                <p class="text-body-secondary mb-3">Revise os dados e registre novos pedidos.</p>

                <div class="d-flex flex-column gap-2 mb-2">
                    <div>
                        <label class="form-label mb-1">Titular</label>
                        <input class="form-control bg-body-secondary" value="@Model.Conta.Titular" readonly />
                    </div>
                    <div>
                        <label class="form-label mb-1">Mesa</label>
                        <input class="form-control bg-body-secondary" value="@Model.Conta.Mesa" readonly />
                    </div>
                    <div>
                        <label class="form-label mb-1">Garçom</label>
                        <input class="form-control bg-body-secondary" value="@Model.Conta.Garcom" readonly />
                    </div>
                </div>

                @if (Model.Conta.EstaAberta)
                {
                    <form class="row g-2 align-items-end"
                          asp-action="AdicionarPedido"
                          asp-route-id="@Model.Conta.Id"
                          method="post">

                        <div class="col-12 col-md-7">
                            <label class="form-label mb-1">Produto</label>
                            <select class="form-select" name="IdProduto" asp-items="@Model.ProdutosDisponiveis"></select>
                        </div>

                        <div class="col-6 col-md-3">
                            <label class="form-label mb-1">Quantidade</label>
                            <input type="number" min="1" value="1" name="QuantidadeSolicitada" class="form-control" />
                        </div>

                        <div class="col-6 col-md-2 d-grid">
                            <button type="submit" class="btn btn-primary">Adicionar</button>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-secondary mt-3 mb-0">
                        Conta fechada. Inclusão/remoção de pedidos está bloqueada.
                    </div>
                }

                @if (!Model.Conta.Pedidos.Any())
                {
                    <div class="alert alert-secondary mt-3 mb-0">
                        Ainda não há nenhum pedido relacionado à conta.
                    </div>
                }
                else
                {
                    <div class="mt-3">
                        <div class="fw-semibold mb-2">Pedidos Registrados</div>

                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Produto</th>
                                    <th class="text-center" style="width: 100px;">Qtd.</th>
                                    <th class="text-end" style="width: 140px;">Valor</th>
                                    @if (Model.Conta.EstaAberta)
                                    {
                                        <th class="text-center" style="width: 80px;"></th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pedido in Model.Conta.Pedidos)
                                {
                                    <tr>
                                        <td>@pedido.Produto</td>
                                        <td class="text-center">@pedido.QuantidadeSolicitada</td>
                                        <td class="text-end">@pedido.TotalParcial.ToString("C2")</td>

                                        @if (Model.Conta.EstaAberta)
                                        {
                                            <td class="text-center">
                                                <form asp-action="RemoverPedido"
                                                      asp-route-id="@Model.Conta.Id"
                                                      asp-route-idPedido="@pedido.Id"
                                                      method="post" class="m-0">
                                                    <button class="btn btn-outline-danger" title="Remover">
                                                        <i class="bi bi-trash3"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        }
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th colspan="2" class="text-end">Total</th>
                                    <th class="text-end">@Model.Conta.ValorTotal.ToString("C2")</th>
                                    @if (Model.Conta.EstaAberta)
                                    {
                                        <th></th>
                                    }
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }

                <div class="d-flex justify-content-end align-items-center gap-3 mt-2">
                    <span class="fw-semibold">Total da Conta: @Model.Conta.ValorTotal.ToString("C2")</span>
                    <a asp-action="Index" class="btn btn-outline-secondary">Voltar</a>
                </div>

            </div>
        </div>
    </div>
</div>
