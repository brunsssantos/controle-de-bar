@model GerenciarPedidosViewModel

@{
    ViewData["Title"] = "Gerenciar Pedidos da Conta";
}

<div class="row justify-content-center my-5">
    <div class="col-12 col-md-9 col-lg-7">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-4 p-md-5">

                <h4 class="mb-4">Gerenciamento de Pedidos na Conta</h4>

                <!-- Dados da conta em "caixinhas" cinzas -->
                <div class="row g-2 mb-3">
                    <div class="col-12">
                        <label class="form-label small mb-1">Titular</label>
                        <input class="form-control form-control-sm bg-body-secondary" value="@Model.Conta.Titular" readonly>
                    </div>

                    <div class="col-12">
                        <label class="form-label small mb-1">Mesa</label>
                        <input class="form-control form-control-sm bg-body-secondary" value="@Model.Conta.Mesa" readonly>
                    </div>

                    <div class="col-12">
                        <label class="form-label small mb-1">Garçom</label>
                        <input class="form-control form-control-sm bg-body-secondary" value="@Model.Conta.Garcom" readonly>
                    </div>
                </div>

                <h5 class="mt-3 mb-2">Pedidos</h5>

                <!-- Linha de adicionar pedido -->
                <form class="row g-2 align-items-end" asp-action="AdicionarPedido" asp-route-id="@Model.Conta.Id" method="post">
                    <div class="col-12 col-md-7">
                        <label class="form-label small mb-1">Produto</label>
                        <select class="form-select form-select-sm" name="IdProduto" asp-items="@Model.ProdutosDisponiveis"></select>
                    </div>

                    <div class="col-6 col-md-3">
                        <label class="form-label small mb-1">Quantidade</label>
                        <input type="number" min="1" value="1" name="QuantidadeSolicitada" class="form-control form-control-sm" />
                    </div>

                    <div class="col-6 col-md-2 d-grid">
                        <button type="submit" class="btn btn-primary btn-sm">Adicionar</button>
                    </div>
                </form>

                @if (!Model.Conta.Pedidos.Any())
                {
                    <p class="fw-semibold text-body-secondary mt-3">
                        Ainda não há nenhum pedido relacionado à conta...
                    </p>
                }
                else
                {
                    <div class="mt-3">
                        <div class="small fw-semibold mb-2">Pedidos Registrados:</div>

                        <table class="table table-sm align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Produto</th>
                                    <th class="text-center" style="width: 90px;">Qtd.</th>
                                    <th class="text-end" style="width: 120px;">Valor</th>
                                    <th class="text-center" style="width: 60px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (PedidoContaViewModel pedido in Model.Conta.Pedidos)
                                {
                                    <tr>
                                        <td>@pedido.Produto</td>
                                        <td class="text-center">@pedido.QuantidadeSolicitada</td>
                                        <td class="text-end">@pedido.TotalParcial.ToString("C2")</td>
                                        <td class="text-center">
                                            <form asp-action="RemoverPedido" asp-route-id="@Model.Conta.Id" asp-route-idPedido="@pedido.Id" method="post">
                                                <button class="btn btn-outline-danger btn-sm" title="Remover">
                                                    <i class="bi bi-trash3"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                <div class="d-flex justify-content-end align-items-center gap-3 mt-3">
                    <span><strong>Total da Conta:</strong> @Model.Conta.ValorTotal.ToString("C2")</span>
                    <a asp-action="Index" class="btn btn-outline-secondary btn">Voltar</a>
                </div>

            </div>
        </div>
    </div>
</div>
