@model AbrirContaViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Abertura de Conta";
}

<div class="row justify-content-center my-5">
    <div class="col-md-8">
        <div class="card rounded-4 border-0 shadow-sm">
            <div class="card-body p-md-5">
                <form asp-action="Abrir" method="post">
                    <h3 class="mb-4">Formulário de Abertura de Conta</h3>

                    <div class="form-group mb-3">
                        <label asp-for="Titular" class="control-label fs-5 fw-semibold">Titular</label>
                        <input asp-for="Titular" class="form-control" />
                        <span asp-validation-for="Titular" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="MesaId" class="control-label fs-5 fw-semibold">Mesa</label>
                        <select asp-for="MesaId" asp-items="@Model.MesasDisponiveis" class="form-select"></select>
                        <span asp-validation-for="MesaId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="GarcomId" class="control-label fs-5 fw-semibold">Garçom</label>
                        <select asp-for="GarcomId" asp-items="@Model.GarconsDisponiveis" class="form-select"></select>
                        <span asp-validation-for="GarcomId" class="text-danger"></span>
                    </div>

                    <div class="form-group d-flex align-items-center justify-content-end gap-3">
                        <a asp-action="Index" class="btn btn-outline-primary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
