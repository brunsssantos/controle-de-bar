@{
    ViewData["Title"] = "Visualização de Produtos";
}

@model VisualizarProdutosViewModel;

<div class="container">
    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" asp-action="Cadastrar">+ Novo Produto</a>
    </div>
</div>


<div class="row g-3">

    @foreach (DetalhesProdutoViewModel g in Model.Registros)
    {
        <div class="col-md-4 col-lg-3">

            <div class="card h-100 bg-dark border-secondary">
                <div class="card-body">
                    <h5 class="card-title">@g.Nome</h5>
                    <p class="card-text mb-1"><strong>Valor:</strong> @g.Valor</p>
                </div>

                <div class="card-footer text-end border-secondary">
                    <a class="btn btn-primary me-1" href="/Produto/Editar/@g.Id">
                        <i class="bi bi-pencil-square "></i>
                    </a>
                    <a class="btn btn-danger" href="/Produto/Excluir/@g.Id">
                        <i class="bi bi-trash3"></i>
                    </a>
                </div>
            </div>
        </div>
    }
</div>